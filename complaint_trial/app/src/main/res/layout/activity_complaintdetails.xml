<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akramkhan.complaint_trial.complaintdetails">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDtitle"
            android:text="TITLE"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:gravity="right"
        android:textSize="22dp"
        android:text="Complaint Status"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cmpDstatus"/>

    <LinearLayout
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="20dp"
            android:text="Time"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmptime"/>
        <TextView
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="20dp"
            android:text="time"
            android:paddingRight="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDtime"/>
        </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="20dp"
            android:text="Complaint Id"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpid"
            android:layout_weight="1"/>

        <TextView
            android:textSize="20dp"
            android:text="complaint Id"
            android:paddingRight="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDid"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Authority concerned"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:textSize="20dp"
            android:text="Techi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDtechi"/>
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Comp Type"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="2"
            android:textSize="20dp"
            android:text="complaint type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDtype"/>
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="20dp"
            android:text="Hostel :"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="right"
            android:textSize="20dp"
            android:text="Hostel name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmpDhostel"/>
    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"/>
    <TextView
        android:padding="7dp"
        android:textSize="20dp"
        android:text="\tThis is the \ndescription of the \ncomplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cmpDdesc"/>
    <TextView
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textStyle="bold"/>
    <TextView
        android:padding="7dp"
        android:textSize="20dp"
        android:text="\tThis is the \ndescription of the \ncomplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notidesc"/>

    <ImageView
        android:id="@+id/cmpDimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Upvotes:"
            android:textStyle="bold"
            android:id="@+id/cmcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1.2"
            android:textSize="20dp"
            android:text="upc"
            android:paddingLeft="15dp"
            android:id="@+id/cmpDupvote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Downvotes:"
            android:textStyle="bold"
            android:id="@+id/cmcount1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1.2"
            android:textSize="20dp"
            android:text="downc"
            android:paddingLeft="15dp"
            android:id="@+id/cmpDdownvote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/cmpDimaged"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:text="RESOLVED"
        android:textStyle="bold"
        android:id="@+id/resolved"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Redundant"
        android:id="@+id/redundant"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="upvote"
            android:textStyle="bold"
            android:id="@+id/upvote"
            android:layout_marginLeft="80dp"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:text="downvote"
            android:textStyle="bold"
            android:id="@+id/downvote"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <Button
        android:paddingTop="10dp"
        android:text="Notify"
        android:textStyle="bold"
        android:id="@+id/notify"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>
</ScrollView>