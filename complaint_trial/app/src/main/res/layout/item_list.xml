<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="#000000"
        android:id="@+id/colorcode"
        android:layout_width="12dp"
        android:layout_alignTop="@+id/comptitle"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/comptitle"
        android:textSize="25dp"
        android:text="Complaint Title"
        android:textStyle="bold"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/compvotes"
        android:layout_below="@id/comptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1.1"
            android:padding="3dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="upvotes:"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/compupvotes"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1.25"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:text="Votes"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center_horizontal"
            android:text="downvotes:"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/compdownvotes"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_weight="1.25"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:text="Votes"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/compvotes"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="complaintID:"
            android:textStyle="bold"/>
        <TextView
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/complaintid"
            android:text="complaintID"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18dp"
            android:id="@+id/times"
            android:layout_below="@+id/compvotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>